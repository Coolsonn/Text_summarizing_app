#: import Button kivy.uix.button.Button
<Display>
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: 1.0, 0.1
            height: 10
            Button:
                pos_hint: {'top': 1}
                text: 'Main Screen'
                bold: True
                background_color: (56/255, 125/255, 240/255, 1)
                on_release:
                    sm.current = 'MainScreen'
                    sm.transition.direction = 'right'
            Button:
                pos_hint: {'top': 1}
                text: 'About us'
                bold: True
                background_color: (56/255, 125/255, 240/255, 1)
                on_release:
                    sm.current = 'AboutScreen'
                    sm.transition.direction = 'up'
            Button:
                pos_hint: {'top': 1}
                text: 'Files'
                bold: True
                background_color: (56/255, 125/255, 240/255, 1)
                on_release:
                    sm.current = 'FilesScreen'
                    sm.transition.direction = 'left'

        ScreenManager:
            id: sm
            MainScreen:
            OutputScreen:
            FilesScreen:
            AboutScreen:
<AboutScreen>
    name: 'AboutScreen'

    BoxLayout:
        orientation: "vertical"
        background_color: (236/255, 236/255, 236/255, 1)
        background_normal: ''
        BoxLayout:
            height: '40dp'
            Button:
                pos_hint: {'top': 0.04}
                size_hint: (.1, .04)
                text: ''
                color: (0,0,0,1)
                background_color: (236/255, 236/255, 236/255, 1)
                background_normal: ''
                background_down: ''


    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: "About Us"
            font_size: 70
            bold: False
            color: 0,0,0,0.5
            pos_hint:{"center_x":0.5,"center_y":0.5}
            italic: True
        Label:
            multiline: True
            text: '''Summarizer was created by a group of students from Kozminski University as their final project. \nYou can input any text you want, and our app will summarize the text for you, automatically.\n \nTry it yourself!\n \nGo to the main page, input the title and the text and click summarize!'''
            font_size: 45
            bold: False
            color: 0,0,0,0.5
            pos_hint:{"center_x":0.5,"center_y":0.5}
            italic: True


<FilesScreen>
    name: 'FilesScreen'

    BoxLayout:

        orientation: "vertical"
        background_color: (236/255, 236/255, 236/255, 1)
        background_normal: ''
        BoxLayout:
            height: '40dp'
            Button:
                pos_hint: {'top': 0.04}
                size_hint: (.1, .04)
                text: ''
                color: (0,0,0,1)
                background_color: (236/255, 236/255, 236/255, 1)
                background_normal: ''
                background_down: ''


    BoxLayout:
        id: fileslayout
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: "Saved texts"
            font_size: 70
            bold: False
            color: 0,0,0,0.5
            pos_hint:{"center_x":0.5,"center_y":0.5}
            italic: True
<MainScreen>
    name: 'MainScreen'
    BoxLayout:
        orientation: "vertical"
        background_color: (236/255, 236/255, 236/255, 1)
        background_normal: ''
        BoxLayout:
            Button:
                pos_hint: {'top': 0.04}
                size_hint: (.1, .04)
                text: ''
                color: (0,0,0,1)
                background_color: (236/255, 236/255, 236/255, 1)
                background_normal: ''
                background_down: ''


    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        Label:
            text: "Summarizing text app"
            font_size: 100
            bold: True
            color: 0, 0, 0, 0.5
            pos_hint:{"center_x":0.2,"center_y":0.5}
        Label:
            text: "Title: "
            color: 0, 0, 0, 0.5
            font_size: 70
            pos_hint:{"center_x":0.08,"center_y":0.5}
        TextInput:
            id: title
            font_size: 50
            width: 80
            height: 50
            background_color: (236/255, 236/255, 236/255, 1)
            background_normal: ''
        Label:
            text: "Provide text"
            color: 0, 0, 0, 0.5
            font_size: 70
            italic: True
            pos_hint:{"center_x":0.08,"center_y":0.5}
        TextInput:
            id: textinput
            text: "This is input"
            font_size: 50
            width: 100
            height: 100
            multiline: False
            background_color: (236/255, 236/255, 236/255, 1)
            background_normal: ''

        GridLayout:
            cols: 3
            spacing: 10
            padding: 50

            Button:
                text: 'Summarize'
                size_hint: (0.4, 1)
                pos_hint:{"center_x":0.5,"center_y":0.5}
                background_color: (56/255, 125/255, 240/255, 1)
                background_normal: ''
                bold: True
                font_size: 40
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'OutputScreen'
            Label:
                text: ""
                size_hint: (.1, .4)
            Button:
                text: 'Cancel'
                size_hint: (.4, .4)
                pos_hint:{"center_x":0.5,"center_y":0.5}
                background_color: (219/255, 74/255, 57/255, 1)
                background_normal: ''
                bold: True
                font_size: 40
                on_release: app.stop()


<OutputScreen>
    name: 'OutputScreen'
    BoxLayout:
        orientation: "vertical"
        background_color: (236/255, 236/255, 236/255, 1)
        background_normal: ''
        BoxLayout:
            height: '40dp'
            Button:
                pos_hint: {'top': 0.04}
                size_hint: (.1, .04)
                text: ''
                color: (0,0,0,1)
                background_color: (236/255, 236/255, 236/255, 1)
                background_normal: ''
                background_down: ''


    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20

        Label:
            text: "Output text"
            font_size: 70
            bold: False
            color: 0,0,0,0.5
            pos_hint:{"center_x":0.5,"center_y":0.5}

        GridLayout:
            cols: 3
            spacing: 10
            padding: 50
            size_hint: (1, .4)

            Button:
                text: 'Go back'
                size_hint: (.2, .4)
                pos_hint:{"center_x":0.5,"center_y":0.5}
                background_color: (56/255, 125/255, 240/255, 1)
                background_normal: ''
                bold: True
                font_size: 40
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'MainScreen'
            Button:
                text: 'Copy'
                size_hint: (.2, .4)
                pos_hint:{"center_x":0.5,"center_y":0.5}
                background_color: (255/255, 206/255, 68/255, 1)
                background_normal: ''
                bold: True
                font_size: 40
                on_press: root.pc.copy(root.manager.get_screen('MainScreen').ids.textinput.text)
            Button:
                text: 'Save'
                size_hint: (.2, .4)
                pos_hint:{"center_x":0.5,"center_y":0.5}
                background_color: (26/255, 162/255, 96/255, 1)
                background_normal: ''
                bold: True
                font_size: 40
                on_press: root.manager.get_screen('FilesScreen').ids.fileslayout.add_widget(Button(text=root.manager.get_screen('MainScreen').ids.title.text, background_color = root.random.choice(root.colors), font_size = 50, height=30))
